<nav>
    <div class="cont">
        <div class="card_logo">
            <div class="logo">
                <a href="/inicio" class="">
                    <img src="../img/logo_nelvann.png" alt="logo">
                </a>
            </div>
        </div>
        <div class="header_p">
            <div class="icon_menu open_menu_mobile">
                <span class="material-symbols-outlined open_menu_mobile">menu</span>
